// components/UploadForm.tsx
import React, { useState } from 'react';
import { ImageData } from '../types';

interface UploadFormProps {
    onUpload: (data: Omit<ImageData, 'id'>) => void;
}

/**
 * UploadForm
 * - Lấy thời gian GMT+4 từ API
 * - Người dùng nhập tên, chọn file
 * - Gọi onUpload với dữ liệu hình ảnh (base64)
 */
export default function UploadForm({ onUpload }: UploadFormProps) {
    const [file, setFile] = useState<File | null>(null);
    const [name, setName] = useState('');
    const [date, setDate] = useState({ day: '', month: '', year: '' });
    const [loading, setLoading] = useState(false);
    const [error, setError] = useState('');

    // Khi mount, gọi API lấy thời gian GMT+4
    React.useEffect(() => {
        async function fetchTime() {
            try {
                // Dùng worldtimeapi để lấy timezone Asia/Dubai (GMT+4)
                const res = await fetch('https://worldtimeapi.org/api/timezone/Asia/Dubai');
                if (!res.ok) throw new Error('Time API error');
                const data = await res.json();
                // datetime ví dụ:2023-08-20T12:34:56.789+04:00
                const dt = new Date(data.datetime);
                const day = String(dt.getUTCDate()).padStart(2, '0');
                const month = String(dt.getUTCMonth() + 1).padStart(2, '0');
                const year = String(dt.getUTCFullYear());
                setDate({ day, month, year });
            } catch (e) {
                console.error('Failed to fetch time', e);
                setError('Không thể lấy thời gian từ server, sẽ dùng giờ máy');
                const now = new Date();
                const gmtPlus4 = new Date(now.getTime() + 4 * 60 * 60 * 1000);
                setDate({
                    day: String(gmtPlus4.getUTCDate()).padStart(2, '0'),
                    month: String(gmtPlus4.getUTCMonth() + 1).padStart(2, '0'),
                    year: String(gmtPlus4.getUTCFullYear()),
                });
            }
        }

        fetchTime();
    }, []);

    const handleFileChange = (e: React.ChangeEvent<HTMLInputElement>) => {
        if (e.target.files?.[0]) setFile(e.target.files[0]);
    };

    const handleSubmit = async (e: React.FormEvent) => {
        e.preventDefault();
        setError('');
        if (!file || !name.trim()) return setError('Vui lòng nhập tên và chọn file');
        setLoading(true);
        try {
            const reader = new FileReader();
            reader.onload = async () => {
                const base64 = reader.result as string;
                onUpload({
                    name: name.trim(),
                    url: base64,
                    day: date.day,
                    month: date.month,
                    year: date.year,
                    timestamp: new Date().toISOString(),
                });
                // reset
                setFile(null);
                setName('');
                (e.target as HTMLFormElement).reset();
            };
            reader.readAsDataURL(file);
        } catch (err) {
            console.error('Upload failed', err);
            setError('Upload thất bại');
        } finally {
            setLoading(false);
        }
    };

    return (
        <div className="bg-white p-6 rounded-lg shadow-md">
            <h2 className="text-xl font-semibold mb-4">Upload Hình ảnh</h2>
            {error && <p className="text-sm text-red-600 mb-2">{error}</p>}
            <form onSubmit={handleSubmit} className="space-y-4">
                <div>
                    <label className="block text-sm font-medium text-gray-700 mb-1">
                        Tên hình ảnh *
                    </label>
                    <input
                        type="text"
                        required
                        value={name}
                        onChange={(e) => setName(e.target.value)}
                        className="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
                        placeholder="Nhập tên..."
                    />
                </div>

                <div>
                    <label className="block text-sm font-medium text-gray-700 mb-1">
                        Ngày (GMT+4)
                    </label>
                    <div className="flex gap-2">
                        <input
                            type="text"
                            value={date.day}
                            readOnly
                            className="w-20 px-3 py-2 border rounded-lg bg-gray-50 text-center"
                        />
                        <input
                            type="text"
                            value={date.month}
                            readOnly
                            className="w-20 px-3 py-2 border rounded-lg bg-gray-50 text-center"
                        />
                        <input
                            type="text"
                            value={date.year}
                            readOnly
                            className="flex-1 px-3 py-2 border rounded-lg bg-gray-50 text-center"
                        />
                    </div>
                    <p className="text-xs text-gray-500 mt-1">Thời gian lấy từ API GMT+4</p>
                </div>

                <div>
                    <label className="block text-sm font-medium text-gray-700 mb-1">
                        Chọn file *
                    </label>
                    <input
                        type="file"
                        accept="image/*"
                        required
                        onChange={handleFileChange}
                        className="w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100"
                    />
                </div>

                <button
                    type="submit"
                    disabled={loading}
                    className="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition disabled:opacity-50 disabled:cursor-not-allowed"
                >
                    {loading ? 'Đang upload...' : 'Upload Hình ảnh'}
                </button>
            </form>
        </div>
    );
}